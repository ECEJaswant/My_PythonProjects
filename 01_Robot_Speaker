                            #Project 01- Speak Robo (Using Google text to speech gTTS)

from gtts import gTTS
import pygame
import time
import os

# Initialize pygame mixer
pygame.mixer.init()

while True:
    text = input("ðŸ¤– Type something (or 'exit' to quit): ")
    if text.lower() == 'exit':
        print("Goodbye!")
        break

    # Convert text to speech and save as mp3
    tts = gTTS(text=text, lang='en')
    filename = "temp_audio.mp3"
    tts.save(filename)

    # Load and play the mp3 using pygame
    pygame.mixer.music.load(filename)
    pygame.mixer.music.play()

    # Wait for audio to finish
    while pygame.mixer.music.get_busy():
        time.sleep(0.1)

    # Optionally delete file
    pygame.mixer.music.stop()
    pygame.mixer.music.unload()
    os.remove(filename)



                                      #Speak Robo (Using pywin32 system build-in speech function)

import win32com.client as wincom
import time

speak = wincom.Dispatch("SAPI.SpVoice")

while True:
  text = input("Type Something (or 'exit' to quit): ")
  if text.lower() == 'exit':
    print("Good Bye!")
    break

  speak.Speak(text)
  time.sleep(0.1)
